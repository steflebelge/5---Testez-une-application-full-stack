/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": ["jest", "node"]
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "plugins": [
    {
      "name": "babel-plugin-istanbul"
    }
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
